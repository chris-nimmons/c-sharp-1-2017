@model Product

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

<div class="col-sm-offset-3 col-sm-6 m-t-2">
    <form method="post" action="~/admin/products/add-do">
        <div class="form-group">
            <label class="control-label">
                Name:
            </label>
            <input type="text" value="" name="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label">
                Price:
            </label>
            <input type="number" value="" name="Price" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label">
                Quantity:
            </label>
            <input type="number" value="" name="Quantity" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label">
                SKU:
            </label>
            <input type="text" value="" name="SKU" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label">
                Weight:
            </label>
            <input type="number" value="" name="Weight" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label">
                Description One:
            </label>
            <input type="text" value="" name="DesciptionOne" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label">
                Description Two:
            </label>
            <input type="text" value="" name="DescriotionTwo" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label">
                Product Image:
            </label>
            <input type="text" value="" name="Imgage" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>