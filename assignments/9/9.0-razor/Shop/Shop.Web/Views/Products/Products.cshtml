


@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<table class="table">
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img class="icon-sm" style="width:200px;height:200px;border:0" src="@product.Image" alt="Generic placeholder image">
                </td>
                <td>
                    <h3>@product.DescriptionOne</h3>
                </td>
                <td>
                    <p>@product.DescriotionTwo</p>
                </td>
                <td>
                    <p><a class="btn btn-primary" href="http://localhost/shop/Products/Product/@product.Id">Learn More &raquo;</a></p>
                </td>
            </tr>
        }
    </tbody>
</table>