@model Cart

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tbody>

        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>
                    <img src=@order.Product.Image class="img-rounded" width="100" height="100" />
                </td>
                
                <td>
                    @order.Product.Name
                </td>
                <td>
                    @order.Product.DescriptionOne
                </td>
                <td>
                    @order.Product.Price
                </td>
                <td>
                    <a href="~/admin/products/@order.Product.Id/edit" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a href="~/admin/products/@order.Product.Id/delete" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a href="http://localhost/shop/cart/Remove/@order.Product.Id" class="btn btn-warning btn-sm"> Remove from Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="~/cart/checkout-do" class="btn btn-success btn-md">Check Out</a>
<a href="~/products/products" class="btn btn-primary btn-md">Continue Shopping</a>

