@model Cart

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm col-lg-offset-3 col-sm-6 m-t-2">
    <h2>
        Thank You for Shopping
    </h2>
</div>

@{decimal subtotal = 0;}

<div class="col-sm-offset-3 col-sm-6 m-t-2">
    
    @foreach (var order in Model.Orders)
    {
        subtotal += order.Quanity * order.Product.Price;
      
        <img src=@order.Product.Image class="img-rounded" width="100" height="100" />
        <input type="hidden" value="Model.Id" name="Id" />
        <div class="group-form">
            <label class="control-label">
                Name:
            </label>
            <input type="text" value="@order.Product.Name" name="Name" />
        </div>
        <div class="group-form">
            <label class="control-label">
                Price:
            </label>
            <input type="text" value="$@order.Product.Price" name="Price" />
        </div>
        <div class="group-form">
            <label class="control-label">
                Quanity:
            </label>
            <input type="text" value="@order.Quanity" name="Quanity" />
        </div>

        <div class="group-form">
            <label class="control-label">
                Subtotal:
            </label>
            <input type="text" value="$@subtotal" name="Subtotal" />
        </div>
        
        <a href="http://localhost/shop/cart/Remove/@order.Product.Id" class="btn btn-warning btn-sm"> Remove from Cart</a>
    }

    <a href="~/cart/checkout" class="btn btn-success btn-md">Check Out</a>
    <a href="~/products/products" class="btn btn-primary btn-md">Continue Shopping</a>

</div>










