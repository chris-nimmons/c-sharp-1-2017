@model Product
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>


<img class="icon-sm" style="width:200px;height:200px;border:0" src="@Model.Image" alt="Generic placeholder image">
<div class="media-body">
    <h5 class="mt-3"></h5>
</div>

<div class="col-md-8">
    <h2>@Model.DescriptionOne</h2>
    <p>@Model.DescriotionTwo</p>
    <p><a class="btn btn-primary" href="http://localhost/shop/Cart/Add/@Model.Id?location=product">Add To Cart &raquo;</a></p>
</div>



