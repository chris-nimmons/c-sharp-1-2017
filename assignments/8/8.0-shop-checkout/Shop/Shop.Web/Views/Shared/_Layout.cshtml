<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Greatest Shopping Experience EVER", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Products", "Products", "Products", new { area = "" }, null)</li>
                    @*<li>@Html.ActionLink("Login", "Login", "Accounts", new { area = "" },null) </li>*@

                    @*@{ decimal cartTotal = 0;}
                    @foreach (var order in Model.Orders)
                    {
                        cartTotal += order.Quantity * order.Product.Price;
                    }*@
                    <li>@Html.ActionLink("Cart", "Index", "Cart", new { area = "" }, null)</li>
                    @*<li> <a class="btn btn-primary" href="http://localhost/shop/Cart">@cartTotal</a></li>*@
                    @*<li class="icon-sm" style="color:blue"> @cartTotal </li>*@
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div class="clearfix"></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
