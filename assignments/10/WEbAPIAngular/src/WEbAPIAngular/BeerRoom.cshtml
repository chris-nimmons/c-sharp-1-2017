@{ 
    ViewData["Title"] = "Browse Beers";
}
<div class="row col-sm-10 col-sm-offset-1" ng-controller="beerRoomController as br">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="text-center"> Browse Beers </h4>
        </div>
        <div class="panel-body">
            <div class="container">
                <div ng-repeat="beer in br.beer">
                    <div beer="{{beer}}"></div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <input class="=form-control" type="text" ng-init="model = {}" ng-model="model.name" />
            </div>
            <div class="form-group mb-0">
                <button type="button" ng-click="br.GetAllBeers" class="btn btn-success btn-block">Create new beer</button>
            </div>
        </div>
    </div>
</div>